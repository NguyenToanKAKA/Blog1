        <servlet-class>controller.FileUploadServlet</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>CVJobSeekerServlet</servlet-name>
        <servlet-class>controller.CVJobSeekerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployerDetailCVServlet</servlet-name>
        <servlet-class>controller.EmployerDetailCVServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateCVServlet</servlet-name>
        <servlet-class>controller.CreateCVServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterJobseekerServlet</servlet-name>
        <url-pattern>/registerjobseeker</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyEmailRegisterServlet</servlet-name>
        <url-pattern>/verifyregister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgetPassJobseeker</servlet-name>
