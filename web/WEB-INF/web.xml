    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyEmailChangePass</servlet-name>
        <url-pattern>/verifychangepass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginJobseeker</servlet-name>
        <url-pattern>/loginjobseeker</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProfileJobseeker</servlet-name>
        <url-pattern>/updateprofilejb</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GoogleLoginServlet</servlet-name>
        <servlet-class>controller.GoogleLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoogleLoginServlet</servlet-name>
        <url-pattern>/googlelogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePassEmployer</servlet-name>
        <url-pattern>/changepassemployer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
